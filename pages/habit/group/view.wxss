.daka-weui-media-box__info-op {
    margin-top: 2px;
    padding-top: 5px;
    padding-bottom: 1px;
    border-top: 1rpx solid #f8f8f8;
}

.daka-weui-media-box__info-op image {
    width: 32rpx;
    height: 32rpx;
}

.weui-flex__item-like {
    width: 50px;
    text-align: center;
    justify-content: center;
}

.weui-flex__item-like-text {
    vertical-align: middle;
    height: 32rpx;
    width: 32rpx;
    -webkit-box-orient: vertical;
    display: inline-block;
    padding-bottom: 16rpx;
}

.weui-flex__item-more {
    width: 30px;
    float: right;
    margin-right: 30rpx;
}

.daka-weui-media-box__info-like {
    margin-top: 2rpx;
    justify-content: center;
    vertical-align: middle;
}

.daka-weui-media-box__info-like .daka-weui-media-box__thumb {
    width: 48rpx;
    height: 48rpx;
    margin-right: 4rpx;
    margin-bottom: 2rpx;
    border: 1rpx solid #e5e5e5;
}

.daka-weui-media-box__info-like .daka-weui-media-box__thumb_like {
    width: 24rpx;
    height: 24rpx;
    margin-right: 20rpx;
    margin-left: 10rpx;
    margin-bottom: 2rpx;
    padding-bottom: 12rpx;
}

.daka-comment {
    font-size: 13px;
    line-height: 1.4;
    color: #999;
}

.daka-comment_active {
    background-color: #ececec;
}

.daka-comment .daka-comment-user {
    color: #586c94;
}

.daka-comment .daka-comment-msg {
    color: #999;
}

.comment-input-panel {
    height: 100rpx;
    padding: 13rpx 20rpx 10rpx;
    background: #f5f5f7;
    border-top: #d7d7d9 1rpx solid;
    box-sizing: border-box;
    display: flex;
    position: absolute;
    width: 100%;
    overflow: hidden;
    z-index: 5000;
    bottom: 1px;
    margin-bottom: 2px;
}

.comment-pic-icon {
    width: 60rpx;
    height: 44rpx;
    margin: 15rpx 20rpx 0 0;
    /*background:url(/image/send.svg);*/
    display: none;
}

.comment-send-input {
    flex: 1;
    height: 72rpx;
    background: #fff;
    border: #ddd 1rpx solid;
    border-radius: 3px;
    box-sizing: border-box;
    padding: 0 10rpx 0 10rpx;
}

.comment-send-btn {
    width: 160rpx;
    height: 72rpx;
    line-height: 72rpx;
    background-color: #a0e75a;
    font-size: 28rpx;
}

.weui-btn-text{
  font-size: 12px;
  text-align: center;
  vertical-align: middle;
}