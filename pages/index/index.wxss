/* pages/index/card.wxss */
@import "../common/dakaui.wxss";

.page__hd {
  padding-bottom: 10px;
}

.list-image {
  width: 24px;
  height: 24px;
  position: absolute;
  top: 3px;
  left: 20px;
}

.card {
  /* white-space: nowrap; */
  margin-top: 1px;
}

.item {
  display: inline-block;
  height: 100%;
  width: 100%;
  border-radius: 5px;
}

/*
